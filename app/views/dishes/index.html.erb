<p id="notice"><%= notice %></p>

<h1>Dishes</h1>
<hr/>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image url</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= link_to dish.name,dish_path(dish) %></td>
        <td>
          <%= link_to image_tag(dish.image_url, class:"image-url"), dish_path(dish) %>
        </td>
        <td><%= dish.price %>Ä‘</td>
        <% if @current_user.id == dish.user_id %>
          <td><%= link_to 'Edit', edit_dish_path(dish) %></td>
          <td><%= link_to 'Destroy', dish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p><%= will_paginate @dishes %></p>
