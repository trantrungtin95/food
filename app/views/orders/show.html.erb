
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @order.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @order.address %>
</p>

<p>
  <strong>Email:</strong>
  <%= @order.email %>
</p>

<p>
  <strong>Pay type:</strong>
  <%= @order.pay_type %>
</p>
<p>
  <strong>Price:</strong>
  <% price = @order.line_items.to_a.sum { |item| item.total_price }%>
  <%= number_to_currency(price) %>
</p>

<p>
  <strong>Discount:</strong>
  <%= @order.discount %>%
</p>

<p>
  <strong>Last Price:</strong>
  <%= number_to_currency(price*(100-@order.discount)/100)%>
</p>


<%= link_to 'Back', root_path %>
