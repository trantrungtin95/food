    var point = { lat: <%= @latitude %>, lng: <%= @longitude %> };
    
    $.each(window.markers, function(a, marker) {
        marker.setMap(null);
    });
    
    window.map.setCenter(point);
    <% @restaurants.each do |restaurant| %>
      var restaurantPoint = {lat: <%= restaurant.latitude %>, lng: <%= restaurant.longitude %> };
      var newresmarker = new google.maps.Marker({position: restaurantPoint,
                                                 label: "<%= restaurant.name%>", 
                                                 map: window.map});
      window.markers.push(newresmarker)
    <% end %>
    