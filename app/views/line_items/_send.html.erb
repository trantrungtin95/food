<% @roomchat = @order.roomchats.build %>
<%= form_for @roomchat, url: chat_restaurant_order_path(@restaurant, @order), remote: true do |f| %>
    <%= f.hidden_field :sender_id, value: @current_user.id %>
    <%= f.hidden_field :sender_name, value: @current_user.name %>
    <div class="form-group">
        <input type="text" name="message" size="40" />
        <input type="submit" name="send" value="Send message" />
    </div>
<% end %>
<br />