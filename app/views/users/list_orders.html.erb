<p id="notice"><%= notice %></p>

<!-- Only for users who are shippers -->
<h1>Orders List</h1>
<hr/>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Pay type</th>
      <th>Time</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <% if order.status == "Unprocessed" %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        <td><%= time_ago_in_words(order.created_at) %> ago</td>
        <td><%= order.status %></td>
        <td><%= link_to 'Show',line_items_path(order_id: order.id) %></td>
        <td>
        </td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

