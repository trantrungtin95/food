<p id="notice"><%= notice %></p>

<h1>Orders</h1>
<hr/>
<% if @current_user.orders.present? %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Pay type</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @current_user.orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        <td><%= time_ago_in_words(order.updated_at) %> ago</td>
        <td><%= link_to 'Show',line_items_path(order) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<br>
