<p id="notice"><%= notice %></p>

<h1>Orders</h1>
<hr/>
<% if @current_user.orders.present? %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Pay type</th>
      <th>Time</th>
      <th>Status</th>
      <th>Shipper</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @my_orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        <td><%= time_ago_in_words(order.updated_at) %> ago</td>
        <td><%= order.status %></td>
        <% if ShipperOrder.where(order_id: order.id).present? %>
          <% shipper_order = ShipperOrder.where(order_id: order.id).first %>
          <td><%= shipper_order.shipper.user.name %></td>
          <% else %>
          <td></td>
        <% end %>
        <td><%= link_to 'Show',line_items_path(order_id: order.id) %></td>
        <% if order.status != "Processing" %>
          <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<br>
